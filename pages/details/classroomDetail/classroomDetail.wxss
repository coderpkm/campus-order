/* pages/details/classroomDetail/classroomDetail.wxss */
.classroomItem,
.user-info {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 15rpx 20rpx 0;
  font-size: 30rpx;
}
.item-pdg {
  padding-bottom: 20rpx;
}
.item-pdg view {
  display: inline-block;
}
.text{
  width: 20%;
  text-align: justify;
  text-align-last: justify;
}

.zhuangtai {
  float: right;
  padding: 5rpx;
  border: 1px solid #ccc;
  color: #05db05;
  border-radius: 15rpx;
  font-size: 26rpx;
}
.info-btn {
  text-align: center;
}

.qx-btn {
  box-sizing: border-box;
  line-height: 80rpx;
  margin: 20rpx;
  text-align: center;
  color: #fff;
  border: 2rpx solid #ccc;
  background-color: #07ce07;
  border-radius: 8rpx;
  font-size: 35rpx;
}
