page {
  background: #f5f5f6;
}
/* 轮播图 */
.banner {
  width: 100%;
  height: 360rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 功能推荐 */
.recommend {
  line-height: 150rpx;
  text-align: center;
}
.recommend .iconfont {
  color: #f00;
  font-size: 60rpx;
  margin-right: 10rpx;

}
.recommend .txt {
  font-size: 42rpx;
  color: #858585
}

/* 导航区域 */
.navContainer {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  justify-content: center;
}
.navItem {
  display: flex;
  height: 240rpx;
  flex-direction: column; 
  align-items: center;
  width: 43%;
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* background-color: #fff; */
  text-align: center;
  line-height: 100rpx;
  color: #f3bf43;
  font-size: 80rpx;
  margin-bottom: 10rpx;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 32rpx;
}
.navItem:nth-child(1) .iconfont {  
  color: #704eed;
}
.navItem:nth-child(2) .iconfont {  
  color: #1890ff;
}
.navItem:nth-child(3) .iconfont {  
  color: #c7bc0c;
}
.navItem:nth-child(4) .iconfont {  
  color: #ff9300;
}